@startuml
skinparam monochrome false
skinparam packageStyle rectangle
skinparam shadowing true
left to right direction
skinparam classAttributeIconSize 0
hide methods

class RegisteredUser {
    - name: String
    - emailAddress: String
    - phoneNumber: String
    - password: String
    - role: String
}

class Client {
    - clientType: String
}

class Category {
    - designation: String
}

class Item {
    - designation: String
    - condition: String
}

class Advertisement {
    - designation: String
    - initialDate: Date
    - finalDate: Date
    - address: String
    - images: String[]
    - status: AdvertisementStatus
}

enum AdvertisementStatus {
    ACTIVE
    PENDING
    CLOSED
}

' --- Associações ---
RegisteredUser <|-- Client
Client "1" -- "*" Advertisement : owns
Item "1" -- "1" Advertisement : item
Category "1" -- "*" Item : categorizes
@enduml